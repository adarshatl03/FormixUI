{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/bin",
    "rootDir": "src/cli",
    "module": "Node16",
    "target": "ES2022",
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": ["src/cli/**/*"]
}
